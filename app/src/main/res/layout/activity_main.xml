<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="world.hit.com.hitman.MainActivity">

    <TextView
        android:id="@+id/txtTargetHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Hit the target as close as possible : " />

    <TextView
        android:id="@+id/txtTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txtTargetHeading"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="100"
        android:layout_toRightOf="@+id/txtTargetHeading" />


    <SeekBar
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/seekBar"
        android:max="100"
        android:progress="50" />

    <TextView
        android:id="@+id/txtMinSeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/seekBar"
        android:text="1"/>

    <TextView
        android:id="@+id/txtMaxSeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:hint="100"
        android:layout_toEndOf="@id/seekBar"
        android:layout_toRightOf="@id/seekBar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hit"
        android:layout_marginTop="10dp"
        android:text="Hit"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset"
        android:text="reset"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutUs"
        android:text="About Us"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE : "
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_marginStart="20dp"
        android:layout_alignBaseline="@+id/reset"
        android:layout_alignBottom="@+id/reset"
        android:layout_toRightOf="@+id/reset"
        android:layout_toEndOf="@+id/reset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:layout_marginLeft="4dp"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_marginStart="4dp"
        android:layout_alignBaseline="@+id/score"
        android:layout_alignBottom="@+id/score"
        android:layout_toRightOf="@+id/score"
        android:layout_toEndOf="@+id/score" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round :"
        android:layout_marginRight="4dp"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_alignBaseline="@+id/txtRound"
        android:layout_alignBottom="@+id/txtRound"
        android:layout_toLeftOf="@+id/txtRound"
         />

    <TextView
        android:id="@+id/txtRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_alignBaseline="@+id/aboutUs"
        android:layout_alignBottom="@+id/aboutUs"
        android:layout_toLeftOf="@+id/aboutUs"
        />
</RelativeLayout>
